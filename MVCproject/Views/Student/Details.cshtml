@model Student;
@{
    Layout = null;
   
}

  
    <div class="card text-center m-auto  w-50">
        <img src="@ViewBag.imgUrl" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text"> in department : @Model.Department?.DeptName</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Id: @Model.Id</li>

            <li class="list-group-item"> @Model.Age years</li>
            <li class="list-group-item"> Email: @Model.Email</li>
        </ul>

    </div>

