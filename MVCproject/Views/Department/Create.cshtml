@model Department
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <form class="m-3" method="post">

        <div class="row m-1">
            <label asp-for="@Model.DeptId" class="col-sm-2   col-form-label-sm">department ID</label>
            <div class="col-sm-10">
                <input asp-for="@Model.DeptId" class="form-control-sm">
            </div>
        </div>
        <div class="row m-1">
            <label asp-for="@Model.DeptName" class="col-sm-2  col-form-label-sm">department NAME</label>
            <div class="col-sm-10">
                <input asp-for="@Model.DeptName" class="form-control-sm">
            </div>
        </div>
        <div class="d-grid gap-2 pt-2 my-1">
            <input class="btn btn-primary" value="Add Department" type="submit"/>
        </div>
    </form>
</body>
</html>
