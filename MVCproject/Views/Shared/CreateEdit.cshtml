@model Student;
@{    SelectList list = new SelectList(ViewBag.depts, "DeptId", "DeptName");


}
<div class="row m-1">
    <label asp-for="@Model.Name" class="col-sm-2  col-form-label-sm"> Name</label>
    <div class="col-sm-10">
        <input asp-for="@Model.Name" class="form-control-sm">
        <span asp-validation-for="Name" class="form-control-sm"></span>

    </div>
</div>
<div class="row m-1">
    <label asp-for="@Model.Email" class="col-sm-2  col-form-label-sm"> Email</label>
    <div class="col-sm-10">
        <input asp-for="@Model.Email" class="form-control-sm">
		<span asp-validation-for="Email"></span>
	</div>
</div>

<div class="row m-1">
    <label asp-for="@Model.ConfirmEmail" class="col-sm-2  col-form-label-sm">Confirm Email</label>
    <div class="col-sm-10">
        <input asp-for="@Model.ConfirmEmail" class="form-control-sm">
        <span asp-validation-for="ConfirmEmail"></span>
    </div>

</div>

<div class="row m-1">
	<label asp-for="@Model.Age" class="col-sm-2  col-form-label-sm">Age</label>
	<div class="col-sm-10">
		<input type="text" asp-for="@Model.Age" class="form-control-sm">
		<span asp-validation-for="Age"></span>
	</div>
</div>

