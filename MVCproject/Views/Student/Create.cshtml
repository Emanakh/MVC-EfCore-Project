@model Student;
@{
    Layout = "_Layout";
    SelectList list = new SelectList(ViewBag.depts, "DeptId", "DeptName");
    ViewBag.title = "Create";

}


   
    <form class="m-3" method="post" enctype="multipart/form-data">

       <partial name="CreateEdit" />
        <div class="row m-1">
            <label asp-for="@Model.Image" class="col-sm-2  col-form-label-sm">Image</label>
            <div class="col-sm-10">
                <input type="file" name="stimg" class="form-control-sm">
            </div>
        </div>

        <div class="d-grid gap-2 pt-2 my-1">
            <input class="btn btn-primary" value="Add Student" type="submit" />
        </div>
        <div asp-validation-summary="ModelOnly"> 
</div>
    </form>

